                                        <input type="checkbox" class="featured-cb" data-id="@item.Id" id="chkfeastatus" @trueFeaturedStatus>
                                        <span class="slider round" id=""></span>
                                    </label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

