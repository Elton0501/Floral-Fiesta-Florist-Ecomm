    function defaultimg(count) {
        $(".img-pro-box").removeClass('default-img-bor');
        $("#" + count).addClass('default-img-bor');
        var id = $("#" + count).attr("src");
        $("#DefaultImage").val(id);
        $(".phide").html("");
        $("#ptext" + count).html("Default Img");
        $(".phide").removeClass('ptag');
        $("#ptext" + count).addClass('ptag');
    }
</script>
