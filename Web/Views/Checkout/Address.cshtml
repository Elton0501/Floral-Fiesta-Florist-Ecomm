                                    $("#State").val(datas.PostOffice[0].State);
                                    distance(pin);
                                    var delamtt = $("#DeliveryAmount").val();
                                    Amount(delamtt);
                                }
                                else {
                                    $(".shipmentError").html("* Sorry! Shipment is not available in this pin code.");
                                    $("#Pincode").val("");
                                    $("#City").val("");
                                    $("#State").val("");
                                }
                            }
                        });
                    }
                }
            });
