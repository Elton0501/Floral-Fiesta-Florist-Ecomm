    $(document).ready(function () {
        Amount("0");

        var pin = $("#Pincode").val();
        if (pin.length == 6) {
            $.ajax({
                url: "https://api.postalpincode.in/pincode/" + pin,
                cache: false,
                dataType: "json",
                type: "GET",
