                                <span class="fname">Landmark <span class="required">*</span></span>
                                <br />
                                <br />
                                <input type="text" name="LandMark" value="@Model.LandMark" required>
                                @Html.ValidationMessageFor(m => m.LandMark, "", new { @class = "text-danger mt-1" })
                            </label>
