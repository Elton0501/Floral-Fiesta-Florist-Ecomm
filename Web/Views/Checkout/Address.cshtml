@model DataModels.AddressDataModels
@{
    ViewBag.Title = "DeliveryAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .imp {
        color: red;
    }

    #state {
        font-family: 'Poppins', sans-serif !important;
    }

    #city {
        font-family: 'Poppins', sans-serif !important;
    }

    .checkout-form {
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
        margin-right: auto;
        margin-left: auto;
    }

    @@media (min-width: 1200px) {
        .checkout-form {
            max-width: 1140px;
        }
    }

    @@media (max-width: 500px) {
        span {
            font-size: 1.9vh !important;
        }
    }

    @@media (max-width: 320px) {
        .checkout-form .box-box {
            padding: 0 !important;
        }
    }



    label #state {
        background: white;
        border: none;
        border-radius: 0;
        font-family: livvic;
        width: 84%;
    }

    .checkout-form .box-box {
        display: flex;
        flex-direction: row;
        background: #ffffff70;
        border-radius: 0 0 5px 5px;
        border: 2px solid var(--dark);
        padding: 25px;
    }

    .checkout-form form {
        flex: 4;
    }

    .checkout-form .Yorder {
        flex: 2;
    }

    .checkout-form .title {
        border-radius: 5px 5px 0 0;
        padding: 20px;
        color: #f6f6f6;
        background: var(--dark);
        margin: 6rem 0 0;
    }

    .checkout-form h2 {
        margin: 0;
        padding-left: 15px;
    }

    .checkout-form .required {
        color: var(--primary);
    }

    .checkout-form label, table {
        display: block;
        margin: 3px 15px;
    }

        .checkout-form label > span {
            float: left;
            width: 90%;
            margin-top: 17px;
            padding-right: 10px;
            color: var(--dark);
        }

    input[type="text"], input[type="tel"], input[type="email"], select {
        width: 100%;
        height: 36px;
        padding: 5px 10px;
        margin-bottom: 10px;
        border: 1px solid var(--primary);
        color: var(--primary);
        letter-spacing: 1px;
        background-color: #ffffff70;
    }

    .checkout-form select {
        width: 85%;
        height: 45px;
        padding: 5px 10px;
        margin-bottom: 10px;
    }

    .Yorder h2 {
        padding: 5px 0px;
        font-size: 3vh !important;
        color:var(--dark);
    }

    .checkout-form .Yorder {
        margin-top: 15px;
        padding: 20px;
        border: 1px solid var(--dark);
        color:var(--dark);
    }

    .checkout-form table {
        margin: 0;
        padding: 0;
    }

    .checkout-form th {
        border-bottom: 1px solid #dadada;
        padding: 10px 0;
    }

    .checkout-form tr > td:nth-child(1) {
        text-align: left;
        color: #2d2d2a;
    }

    .checkout-formtr > td:nth-child(2) {
        text-align: right;
        color: #52ad9c;
    }

    .checkout-form td {
        border-bottom: 1px solid #dadada;
        padding: 25px 25px 25px 0;
    }

    .checkout-form p {
        display: block;
        color: #888;
        margin: 0;
        padding-left: 25px;
    }

    .checkout-form .Yorder > div {
        padding: 8px 0;
    }

    .checkout-form button {
        width: 100%;
        margin-top: 10px;
        padding: 10px;
        font-size: 15px;
        font-weight: bold;
        transition: all 0.4s;
    }

        .checkout-form button:hover {
            cursor: pointer;
            background: #99aa6c;
        }

    #addaddress a {
        text-decoration: underline;
        font-size: 14px;
        color: var(--text);
    }

    #addaddress {
        text-align: right;
    }

    .addchk {
        text-align: center !important;
        place-self: center !important;
    }

    .addchklabel label {
        margin: 3px 0px !important;
