@model DataModels.HomeViewModel
@{
    ViewBag.Title = "Floral Fiesta";
    var seasonalimg = KeyService.Instance.SeasonImg("SeasonImg");;
}

<style>
    .cont {
        margin: auto;
    }

    #toasts {
        position: fixed;
        bottom: 10px;
        right: 10px;
        display: flex;
        align-items: flex-end;
        z-index: 9999;
        background: white;
    }

    .toast {
        border-radius: 5px;
        padding: 0.1rem 1rem;
        margin: .5rem;
        opacity: 1;
        border: none;
        box-shadow: none;
    }

    .SeasonalImg {
        width: 100%;
        cursor: pointer;
    }

    #explore .second-text, #explore .first-text {
        position: relative;
    }

    #explore .image {
        display: block;
        width: 100%;
        height: auto;
    }

    #explore .overlay {
        position: absolute;
        opacity: 0;
        transition: .5s ease;
        top: 15px;
        right: 15px;
        left: 15px;
        bottom: 15px;
        text-align: center;
        background-color: #006045f2;
    }

    #explore .second-text:hover .overlay {
        opacity: 1;
		display: flex;
    }

    #explore .first-text:hover .overlay {
        opacity: 1;
		display: flex;
    }

    #explore .text {
        color: white;
        font-size: 14px;
        position: absolute;
        text-align: center;
        padding: 15px;
		align-self: center;
    }
	
	@@media (max-width: 1200px) {
        .abt-block {
            display: block;
        }

        .abt-cont {
            max-width: 100%;
        }

        .abt-vims {
            max-width: 100%;
        }

        #explore .leather, #explore .types {
            min-height: 450px;
        }

            #explore .leather h4, #explore .types h4 {
                padding-top: 0;
            }

        .vimi-trxt-center {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
    }


</style>
